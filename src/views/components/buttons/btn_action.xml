<component>
    <previews>
        <preview width="200" height="200" 
                style_bg_color="0xdddddd" style_pad_all="10">
        </preview>
    </previews>   
    <api>  
        <prop name="icon" type="string" default="img_gear"></prop>
        <prop name="size" type="int" default="96"></prop>
        <prop name="padding" type="int" default="16"></prop>
    </api> 

    <styles>
        <style name="main" bg_color="0x007AD8" radius="16" width="content" height="content"
            border_width="1" border_color="0x007AD8" outline_color="0xd1d5db"
            shadow_width="1" shadow_color="0x1d1d1d" shadow_opa="13" shadow_offset_x="0" shadow_offset_y="1" />
        <style name="pr" bg_color="0x005AA3" radius="16" />
    </styles>
    <view extends="lv_button" width="$size" height="$size" styles="main pr:pressed" style_margin_all="4" style_pad_all="$padding">
        <icon src="$icon" align="center" width="100%" height="100%" />
    </view>
</component>
