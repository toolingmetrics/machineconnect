<screen>
    <consts>
        <int name="slider_box_width" value="155"/>
    </consts>

    <styles>
        <style name="main"
               bg_color="0x111111"
               radius="0"
               border_width="0"
               layout="flex"
               flex_flow="row"
               width="100%" height="100%"
               pad_all="0"
               pad_column="0"/>

        <style name="cont"
               height="100%"
               bg_color="0x333333"
               flex_flow="column"
               layout="flex"
               radius="0"
               pad_all="0"
               pad_row="16"/>

        <style name="left_cont"
               width="content"
               border_width="0"
               pad_all="16"/>

        <style name="right_cont"
               layout="flex"
               bg_opa="0"
               border_width="0"
               flex_flow="column"
               flex_track_place="center"
               flex_cross_place="center"
               pad_all="16"
               />
    </styles>
    <view width="100%" height="100%" styles="main" style_bg_color="0xe5e7eb" style_pad_all="0">
        <header />
        <lv_obj styles="cont left_cont">
            
        </lv_obj>

        <lv_obj styles="cont right_cont" flex_grow="1">
            
        </lv_obj>
    </view>
</screen>
